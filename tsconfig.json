{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "#/*": [
        "src/*"
      ],
      "#api/*": [
        "src/api/*"
      ],
      "#pages/*": [
        "src/app/*"
      ],
      "#layout/*": [
        "src/layout/*"
      ],
      "#components/*": [
        "src/components/*"
      ],
      "#assets/*": [
        "src/assets/*"
      ],
      "#stores/*": [
        "src/stores/*"
      ],
      "#hooks/*": [
        "src/hooks/*"
      ],
      "#util/*": [
        "src/util/*"
      ],
      "#constants/*": [
        "src/constants/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "next.config.js"
  ],
  "files": [
    "src/custom.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
